<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: linear-gradient(to bottom, #e1f1fc, #a1c4fd);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.AdminController">

    <!-- Header -->
    <Text layoutX="20" layoutY="60" style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-fill: #1e3a8a;" text="Admin Management Page" wrappingWidth="500.0" textAlignment="CENTER">
        <effect>
            <DropShadow radius="10.0" color="#3b5998" />
        </effect>
    </Text>

    <!-- Sidebar Navigation -->
    <VBox layoutX="20" layoutY="100" spacing="20">
        <Button fx:id="manageBooksButton" onAction="#handleManageBooks" prefHeight="80.0" prefWidth="200" text="Manage Books"
                style="-fx-background-color: #6a91ff; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;"/>
        <Button fx:id="manageUsersButton" onAction="#handleManageUsers" prefHeight="80.0" prefWidth="200" text="Manage Users"
                style="-fx-background-color: #fbc02d; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;"/>
        <Button fx:id="manageLateReturnBooksButton" onAction="#handleManageLateReturnBooks" prefHeight="80.0" prefWidth="200" text="Manage Late Returns"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;"/>
        <Button fx:id="backButton" onAction="#handleBackButton" prefWidth="200" text="Back to Homepage"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </VBox>

    <!-- Book Management View -->
    <VBox fx:id="bookManagementView" layoutX="250" layoutY="100" spacing="20" visible="false">
        <TextField fx:id="searchBookInput"
                   promptText="Search books by title, author, or ISBN"
                   style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-padding: 8px; -fx-border-radius: 5px; -fx-border-color: #cccccc;" />
        <TableView fx:id="bookTable" prefHeight="400.0" prefWidth="900.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="150.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="150.0" text="Author" />
                <TableColumn fx:id="isbnColumn" prefWidth="150.0" text="ISBN" />
                <TableColumn fx:id="availabilityColumn" prefWidth="100.0" text="Available" />
                <TableColumn fx:id="borrowerColumn" prefWidth="150.0" text="Borrower" />
                <TableColumn fx:id="borrowDateColumn1" prefWidth="100.0" text="Borrow Date" />
                <TableColumn fx:id="returnDateColumn1" prefWidth="100.0" text="Return Date" />
            </columns>
        </TableView>
        <HBox spacing="20">
            <Button onAction="#handleAddBook" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;" text="Add Book" />
            <Button onAction="#handleDeleteBook" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;" text="Delete Book" />
        </HBox>
    </VBox>

    <!-- User Management View -->
    <VBox fx:id="userManagementView" layoutX="250" layoutY="100" spacing="20" visible="false">
        <TextField fx:id="searchUserInput"
                   promptText="Search users by name or ID"
                   prefWidth="280.0"
                   style="-fx-font-size: 16px; -fx-background-color: white; -fx-padding: 8px; -fx-border-radius: 5px; -fx-border-color: #cccccc;" />
        <HBox spacing="20">
            <TableView fx:id="userTable" prefHeight="400.0" prefWidth="280.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="180.0" text="Name" />
                    <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
                </columns>
            </TableView>
            <VBox spacing="20">
                <Text style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Borrowed Books: " />
                <TableView fx:id="borrowedBooksTableView" prefHeight="380.0" prefWidth="630.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;">
                    <columns>
                        <TableColumn fx:id="bookTitleColumn" text="Title" prefWidth="150" />
                        <TableColumn fx:id="bookAuthorColumn" text="Author" prefWidth="120" />
                        <TableColumn fx:id="bookIsbnColumn" text="ISBN" prefWidth="120" />
                        <TableColumn fx:id="bookBorrowDateColumn" text="Borrow Date" prefWidth="120" />
                        <TableColumn fx:id="bookReturnDateColumn" text="Return Date" prefWidth="120" />
                    </columns>
                </TableView>
            </VBox>
        </HBox>
        <HBox spacing="20">
            <Button onAction="#handleAddUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;" text="Add User" />
            <Button onAction="#handleDeleteUser" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;" text="Delete User" />
        </HBox>
    </VBox>

    <!-- Late Return Books Management -->
    <VBox fx:id="lateReturnBooksView" layoutX="250" layoutY="100" spacing="20" visible="false">
        <TableView fx:id="borrowedBooksTable" prefHeight="400.0" prefWidth="900.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;">
            <columns>
                <TableColumn fx:id="borrowedTitleColumn" prefWidth="180.0" text="Title" />
                <TableColumn fx:id="borrowerNameColumn" prefWidth="180.0" text="Borrower" />
                <TableColumn fx:id="borrowDateColumn" prefWidth="180.0" text="Borrow Date" />
                <TableColumn fx:id="returnDateColumn" prefWidth="180.0" text="Return Date" />
                <TableColumn fx:id="fineColumn" prefWidth="180.0" text="Fine" />
            </columns>
        </TableView>
        <HBox spacing="20">
            <Button fx:id="renewBookButton" onAction="#handleRenewBook" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;" text="Renew Book" />
            <Button fx:id="returnBookButton" onAction="#handleReturnBook" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;" text="Return Book" />
        </HBox>
</VBox>
</AnchorPane>
