<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom, #d7e8f7, #b0d3f0);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AdminController">
    <Text layoutX="20" layoutY="30" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Admin Management Page" />

    <VBox layoutX="20" layoutY="70" spacing="15">
        <Button fx:id="backButton" onAction="#handleBackButton" style="-fx-font-size: 16px; -fx-background-color: #3b5998; -fx-text-fill: white;" text="Back to Homepage" />
        <Button fx:id="manageBooksButton" onAction="#handleManageBooks" prefHeight="100.0" prefWidth="155.5" style="-fx-font-size: 16px; -fx-background-color: #8b9dc3; -fx-text-fill: white;" text="Manage Books" />
        <Button fx:id="manageUsersButton" onAction="#handleManageUsers" prefHeight="100.0" prefWidth="155.5" style="-fx-font-size: 16px; -fx-background-color: #8b9dc3; -fx-text-fill: white;" text="Manage Users" />
        <Button fx:id="manageLateReturnBooksButton" onAction="#handleManageLateReturnBooks" prefHeight="100.0" prefWidth="155.5" style="-fx-font-size: 16px; -fx-background-color: #8b9dc3; -fx-text-fill: white;" text="Manage Late Returns" />
    </VBox>

    <!-- Book Management View -->
    <VBox fx:id="bookManagementView" layoutX="200" layoutY="70" spacing="10" visible="false">
        <HBox spacing="10">
            <TextField fx:id="searchBookInput" promptText="Search Books" style="-fx-font-size: 16px; -fx-background-color: white; -fx-padding: 10px;" />
            <Button onAction="#handleSearchBooks" style="-fx-font-size: 16px; -fx-background-color: #4caf50; -fx-text-fill: white;" text="Search" />
        </HBox>
        <TableView fx:id="bookTable" prefHeight="400.0" prefWidth="900.0" style="-fx-background-color: #f3f3f3;">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="180.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="180.0" text="Author" />
                <TableColumn fx:id="isbnColumn" prefWidth="180.0" text="ISBN" />
                <TableColumn fx:id="availabilityColumn" prefWidth="180.0" text="Available" />
                <TableColumn fx:id="borrowerColumn" prefWidth="180.0" text="Borrower" />
            </columns>
        </TableView>
    </VBox>

    <!-- Late Return Books Management -->
    <VBox fx:id="lateReturnBooksView" layoutX="200" layoutY="70" spacing="10" visible="false">
        <TableView fx:id="borrowedBooksTable" prefHeight="400.0" prefWidth="900.0" style="-fx-background-color: #f3f3f3;">
            <columns>
                <TableColumn fx:id="borrowedTitleColumn" prefWidth="180.0" text="Title" />
                <TableColumn fx:id="borrowerNameColumn" prefWidth="180.0" text="Borrower" />
                <TableColumn fx:id="borrowDateColumn" prefWidth="180.0" text="Borrow Date" />
                <TableColumn fx:id="returnDateColumn" prefWidth="180.0" text="Return Date" />
                <TableColumn fx:id="fineColumn" prefWidth="180.0" text="Fine" />
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button fx:id="renewBookButton" onAction="#handleRenewBook" style="-fx-font-size: 16px; -fx-background-color: #4caf50; -fx-text-fill: white;" text="Renew Book" />
            <Button fx:id="returnBookButton" onAction="#handleReturnBook" style="-fx-font-size: 16px; -fx-background-color: #f44336; -fx-text-fill: white;" text="Return Book" />
        </HBox>
    </VBox>

    <!-- User Management View -->
    <VBox fx:id="userManagementView" layoutX="200" layoutY="70" spacing="10" visible="false">
        <HBox spacing="10">
            <TextField fx:id="searchUserInput" promptText="Search Users" style="-fx-font-size: 16px; -fx-background-color: white; -fx-padding: 10px;" />
            <Button onAction="#handleSearchUsers" style="-fx-font-size: 16px; -fx-background-color: #4caf50; -fx-text-fill: white;" text="Search" />
        </HBox>
        <HBox spacing="20">
            <TableView fx:id="userTable" prefHeight="400.0" prefWidth="450.0" style="-fx-background-color: #f3f3f3;">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="225.0" text="Name" />
                    <TableColumn fx:id="idColumn" prefWidth="225.0" text="ID" />
                </columns>
            </TableView>
            <VBox>
                <Text style="-fx-font-size: 16px; " text="Borrowed Books: " />
                <ListView fx:id="borrowedBooksListView" prefHeight="380.0" prefWidth="450.0" style="-fx-background-color: #f3f3f3;" />
            </VBox>
        </HBox>
        <HBox spacing="10">
            <TextField fx:id="nameInput" promptText="User Name" style="-fx-background-color: white; -fx-padding: 10px;" />
            <TextField fx:id="idInput" promptText="User ID" style="-fx-background-color: white; -fx-padding: 10px;" />
        </HBox>
        <HBox spacing="10">
            <Button onAction="#handleAddUser" style="-fx-font-size: 16px; -fx-background-color: #4caf50; -fx-text-fill: white;" text="Add User" />
            <Button onAction="#handleDeleteUser" style="-fx-font-size: 16px; -fx-background-color: #f44336; -fx-text-fill: white;" text="Delete User" />
        </HBox>
    </VBox>

</AnchorPane>
