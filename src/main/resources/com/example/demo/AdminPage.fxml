<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.AdminController">
    <!-- Admin Management Text -->
    <Text text="Admin Management Page" layoutX="150" layoutY="50" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Admin Actions VBox -->
    <VBox spacing="15" layoutX="150" layoutY="100">
        <Button fx:id="addBookButton" text="Add Book" onAction="#handleAddBook"/>
        <Button fx:id="searchBookButton" text="Search Book" onAction="#handleSearchBook"/>
        <Button fx:id="viewBookListButton" text="View Book List" onAction="#handleViewBookList"/>
        <Button fx:id="addUserButton" text="Add User" onAction="#handleAddUser"/>
        <Button fx:id="searchUserButton" text="Search User" onAction="#handleSearchUser"/>
        <Button fx:id="viewUserListButton" text="View User List" onAction="#handleViewUserList"/>
        <Button fx:id="backButton" text="Back to Homepage" onAction="#handleBackButton"/>
    </VBox>
</AnchorPane>
