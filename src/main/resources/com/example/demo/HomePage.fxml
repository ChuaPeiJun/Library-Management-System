<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #add8e6);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LibraryAppController">

    <!-- Background Decoration -->
    <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <!-- Decorative Rectangle for Styling -->
        <Rectangle width="600.0" height="700.0" arcWidth="50.0" arcHeight="50.0" fill="white" stroke="#d3d3d3" strokeWidth="1.5"/>

        <!-- Main Content -->
        <VBox alignment="CENTER" spacing="40" prefWidth="500.0">
            <!-- Welcome Text -->
            <Text style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-fill: #3b5998;" text="Welcome to the Library Management System" wrappingWidth="500.0" textAlignment="CENTER">
                <effect>
                    <DropShadow color="#8b9dc3"/>
                </effect>
            </Text>

            <!-- Subtitle -->
            <Text style="-fx-font-size: 20px; -fx-font-style: italic; -fx-fill: #555;" text="A system designed for efficient library management." wrappingWidth="480.0" textAlignment="CENTER"/>

            <!-- Buttons Section -->
            <HBox alignment="CENTER" spacing="30">
                <!-- User Button -->
                <Button fx:id="userButton" onAction="#handleUserButton" prefHeight="60.0" prefWidth="200.0" text="User" style="-fx-background-color: #3b5998; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <!-- Admin Button -->
                <Button fx:id="adminButton" onAction="#handleAdminButton" prefHeight="60.0" prefWidth="200.0" text="Admin" style="-fx-background-color: #f57a29; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </HBox>

            <!-- Footer Text -->
            <Text style="-fx-font-size: 16px; -fx-fill: #888;" text="Â© 2024 Library Management System" wrappingWidth="400.0" textAlignment="CENTER"/>
        </VBox>
    </StackPane>
</AnchorPane>
