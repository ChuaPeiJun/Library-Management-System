<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f0e68c;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LibraryAppController">
    <!-- Center VBox -->
    <VBox alignment="CENTER" layoutX="350.0" layoutY="200.0" prefHeight="400.0" prefWidth="500.0" spacing="40">
        <!-- Welcome Text with Drop Shadow Effect for Better Visibility -->
        <Text style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-effect: dropshadow(one-pass-box, black, 8, 0.0, 2, 2);" text="Welcome to Library Management System" wrappingWidth="480.0" textAlignment="CENTER"/>

        <!-- Role Selection Text -->
        <Text style="-fx-font-size: 26px;" text="Please select your role" wrappingWidth="480.0" textAlignment="CENTER"/>

        <!-- Centered Buttons with Added Styling -->
        <VBox alignment="CENTER" spacing="20">
            <!-- User Button -->
            <Button fx:id="userButton" onAction="#handleUserButton" prefHeight="50.0" prefWidth="200.0" text="User" style="-fx-background-color: #add8e6; -fx-font-size: 20px; -fx-font-weight: bold;">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <!-- Admin Button -->
            <Button fx:id="adminButton" onAction="#handleAdminButton" prefHeight="50.0" prefWidth="200.0" text="Admin" style="-fx-background-color: #ffcccb; -fx-font-size: 20px; -fx-font-weight: bold;">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
        </VBox>
    </VBox>
</AnchorPane>