<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.UserController">
    <!-- User Management Text -->
    <Text text="User Management Page" layoutX="1200" layoutY="800" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- User Actions VBox -->
    <VBox spacing="15" layoutX="150" layoutY="100">
        <Button fx:id="borrowBookButton" text="Borrow Book" onAction="#handleBorrowBook"/>
        <Button fx:id="returnBookButton" text="Return Book" onAction="#handleReturnBook"/>
        <Button fx:id="searchBookButton" text="Search Book" onAction="#handleSearchBook"/>
        <Button fx:id="backButton" text="Back to Homepage" onAction="#handleBackButton"/>
    </VBox>
</AnchorPane>
