<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.UserController" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #add8e6);">
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER" layoutX="20" layoutY="70" prefWidth="250" style="-fx-padding: 20;">
            <Label fx:id="usernameLabel" text="Username" wrapText="true" textAlignment="CENTER" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Button fx:id="borrowBookButton" text="Borrow Book" onAction="#showBorrowBookView" prefHeight="100.0" prefWidth="200"
                    style="-fx-background-color: #3b5998; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;"/>
            <Button fx:id="viewBorrowedBooksButton" text="Return/Renew Book" onAction="#showBorrowedBooksView" prefHeight="100.0" prefWidth="200"
                    style="-fx-background-color: #8b9dc3; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px;"/>
            <Button fx:id="backToHomepageButton" text="Back to Homepage" onAction="#handleBackToHomepage" prefWidth="200"
                    style="-fx-background-color: #8b9dc3; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px; "  />
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <StackPane fx:id="mainContent" >
            <!-- Borrow Book Table -->
            <VBox fx:id="borrowBookView" spacing="20" layoutX="200" layoutY="70" style="-fx-padding: 20px;">
                <TextField fx:id="searchBookInput" promptText="Search books by title, author, or ISBN" maxWidth="750"
                           style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-padding: 8px; -fx-border-radius: 5px; -fx-border-color: #cccccc;" />
                <HBox spacing="20">
                <TableView fx:id="bookTable" prefHeight="450" maxWidth="600">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="230" />
                        <TableColumn fx:id="authorColumn" text="Author" prefWidth="150" />
                        <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="140" />
                        <TableColumn fx:id="availabilityColumn" text="Available" prefWidth="80"/>
                    </columns>
                </TableView>
                    <VBox spacing="16">
                        <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Borrowed Books Details: " />
                        <VBox spacing="20" prefWidth="300" prefHeight="260" style="-fx-background-color: linear-gradient(to bottom, #f0f8ff, #f5e1e1); -fx-padding: 20; -fx-border-radius: 15; -fx-background-radius: 15; -fx-border-color: #cccccc; -fx-border-width: 1;">
                            <!-- Book Title -->
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Text text="Book Title:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label fx:id="titleLabel"  style="-fx-font-size: 14px;  -fx-font-style: italic;"/>
                            </HBox>
                            <!-- Author -->
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Author:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label fx:id="authorLabel"  style="-fx-font-size: 14px;"/>
                            </HBox>
                            <!-- ISBN -->
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="ISBN:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label fx:id="isbnLabel"  style="-fx-font-size: 14px; "/>
                            </HBox>
                            <!-- Borrowed Date -->
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Borrowed Date:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label fx:id="borrowedDateLabel"  style="-fx-font-size: 14px;"/>
                            </HBox>
                            <!-- Return Date -->
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Return Date:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label fx:id="returnDateLabel" style="-fx-font-size: 14px;"/>
                            </HBox>
                        </VBox>
                    </VBox>
                </HBox>
                <Button fx:id="borrowSelectedBookButton" text="Borrow Selected Book" onAction="#handleBorrowBook" style="-fx-font-size: 16px; -fx-background-color: #4caf50;-fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>

            <!-- Borrowed Books Table -->
            <VBox fx:id="borrowedBooksView" spacing="20" visible="false" style="-fx-padding: 20px;">
                <StackPane.margin>
                    <Insets top="20" />
                </StackPane.margin>
                <TableView fx:id="borrowedBooksTable" prefHeight="450.0" maxWidth="750.0" >
                    <columns>
                        <TableColumn fx:id="borrowedTitleColumn" text="Title" prefWidth="250.0" />
                        <TableColumn fx:id="borrowedISBNColumn" text="ISBN" prefWidth="200.0" />
                        <TableColumn fx:id="borrowedStatusColumn" text="Status" prefWidth="100.0" />
                        <TableColumn fx:id="borrowDateColumn" text="Borrow Date" prefWidth="100.0"/>
                        <TableColumn fx:id="returnDateColumn" text="Return Date" prefWidth="100.0"/>
                    </columns>
                </TableView>
                <HBox spacing="20">
                    <Button fx:id="returnSelectedBookButton" text="Return Selected Book" onAction="#handleReturnBook" style="-fx-font-size: 16px;-fx-font-weight: bold;  -fx-background-color: #4caf50; -fx-text-fill: white;"/>
                    <Button fx:id="renewSelectedBookButton" text="Renew Selected Book" onAction="#handleRenewBook" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #f44336; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
