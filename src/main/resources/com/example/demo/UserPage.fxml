<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.UserController" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom, #d7e8f7, #b0d3f0);">
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER" layoutX="20" layoutY="70" prefWidth="200" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
            <Label fx:id="usernameLabel" text="Username" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <Button fx:id="backToHomepageButton" text="Back to Homepage" maxWidth="180" onAction="#handleBackToHomepage" prefWidth="155.5" style="-fx-font-size: 16px; -fx-background-color: #3b5998; -fx-text-fill: white;" />
            <Button fx:id="borrowBookButton" text="Borrow Book" onAction="#showBorrowBookView" prefHeight="100.0" prefWidth="155.5" style="-fx-font-size: 16px; -fx-background-color: #8b9dc3; -fx-text-fill: white;"/>
            <Button fx:id="viewBorrowedBooksButton" text="View Borrowed Books" onAction="#showBorrowedBooksView" prefHeight="100.0" prefWidth="155.5" style="-fx-font-size: 16px; -fx-background-color: #8b9dc3; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <StackPane fx:id="mainContent">
            <!-- Borrow Book Table -->
            <VBox fx:id="borrowBookView" spacing="10" layoutX="200" layoutY="70" alignment="TOP_CENTER" >
                <TextField fx:id="searchBookInput" promptText="Search books by title, author, or ISBN" />
                <TableView fx:id="bookTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="150" />
                        <TableColumn fx:id="authorColumn" text="Author"  />
                        <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="100" />
                        <TableColumn fx:id="availabilityColumn" text="Available" />
                    </columns>
                </TableView>
                <Button fx:id="borrowSelectedBookButton" text="Borrow Selected Book" onAction="#handleBorrowBook" style="-fx-font-size: 16px; -fx-background-color: #4caf50; -fx-text-fill: white;"/>
            </VBox>

            <!-- Borrowed Books Table -->
            <VBox fx:id="borrowedBooksView" spacing="10" alignment="TOP_CENTER" visible="false" managed="false">
                <TableView fx:id="borrowedBooksTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="borrowedTitleColumn" text="Title" prefWidth="150" />
                        <TableColumn fx:id="borrowedISBNColumn" text="ISBN" prefWidth="100" />
                        <TableColumn fx:id="borrowedStatusColumn" text="Status" prefWidth="100" />
                        <TableColumn fx:id="borrowDateColumn" text="Borrow Date" />
                        <TableColumn fx:id="returnDateColumn" text="Return Date" />
                    </columns>
                </TableView>
                <Button fx:id="returnSelectedBookButton" text="Return Selected Book" onAction="#handleReturnBook" style="-fx-font-size: 16px; -fx-background-color: #4caf50; -fx-text-fill: white;"/>
                <Button fx:id="renewSelectedBookButton" text="Renew Selected Book" onAction="#handleRenewBook" style="-fx-font-size: 16px; -fx-background-color: #f44336; -fx-text-fill: white;"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
