<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.UserController">
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" alignment="CENTER" prefWidth="200" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
            <Label fx:id="usernameLabel" text="Username" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <Button fx:id="borrowBookButton" text="Borrow Book" maxWidth="180" onAction="#showBorrowBookView" />
            <Button fx:id="viewBorrowedBooksButton" text="View Borrowed Books" maxWidth="180" onAction="#showBorrowedBooksView" />
            <Button fx:id="backToHomepageButton" text="Back to Homepage" maxWidth="180" onAction="#handleBackToHomepage" />
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <StackPane fx:id="mainContent">
            <!-- Borrow Book Table -->
            <VBox fx:id="borrowBookView" spacing="10" alignment="TOP_CENTER" visible="true" managed="true">
                <TextField fx:id="searchBookInput" promptText="Search books by title, author, or ISBN" />
                <TableView fx:id="bookTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="150" />
                        <TableColumn fx:id="authorColumn" text="Author" prefWidth="150" />
                        <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="100" />
                        <TableColumn fx:id="availabilityColumn" text="Available" prefWidth="80" />
                    </columns>
                </TableView>
                <Button fx:id="borrowSelectedBookButton" text="Borrow Selected Book" onAction="#handleBorrowBook" />
            </VBox>

            <!-- Borrowed Books Table -->
            <VBox fx:id="borrowedBooksView" spacing="10" alignment="TOP_CENTER" visible="false" managed="false">
                <TableView fx:id="borrowedBooksTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="borrowedTitleColumn" text="Title" prefWidth="150" />
                        <TableColumn fx:id="borrowedISBNColumn" text="ISBN" prefWidth="100" />
                        <TableColumn fx:id="borrowedStatusColumn" text="Status" prefWidth="100" />
                        <TableColumn fx:id="borrowDateColumn" text="Borrow Date" />
                        <TableColumn fx:id="returnDateColumn" text="Return Date" />
                    </columns>
                </TableView>
                <Button fx:id="returnSelectedBookButton" text="Return Selected Book" onAction="#handleReturnBook" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>
